<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context=".Activities.SignInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="136dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="87.5dp"
        android:layout_marginTop="74dp"
        android:layout_marginRight="87.5dp"
        app:srcCompat="@drawable/icon1" />

    <EditText
        android:id="@+id/email_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="99dp"
        android:ems="10"
        android:hint="e-mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_sign"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="99dp"
        android:ems="10"
        android:hint="hasÅ‚o"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/nextsignbutton"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_below="@+id/password_sign"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="102.5dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="102.5dp"
        android:background="@drawable/roundedbutton"
        android:text="Zaloguj"
        android:textSize="25dp" />

</RelativeLayout>